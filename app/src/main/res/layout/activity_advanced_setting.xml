<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Profile Visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:paddingStart="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:fontFamily="casual"
        android:layout_margin="10dp"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/visibility"
        android:layout_marginLeft="20dp">

        <RadioButton
            android:text="Friends Only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friend_only"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:paddingTop="15dp"
            android:layout_weight="1"
            style="@android:style/Widget.Material.CompoundButton.RadioButton"
            android:fontFamily="casual"
            android:textSize="18sp" />

        <RadioButton
            android:text="Public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/publickey"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:paddingTop="15dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textSize="18sp" />

        <RadioButton
            android:text="Private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privatekey"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:paddingTop="15dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textSize="18sp" />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Email Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:typeface="sans"
            android:textSize="24sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:layout_marginLeft="10dp" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/email_notification"
            android:textSize="18sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
