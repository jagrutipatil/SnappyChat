<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/open">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="0.07">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="nickname"
            android:ems="10"
            android:id="@+id/name"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="24sp"
            android:background="@null"
            android:layout_weight="0.04"
            android:paddingStart="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="352dp"
            android:id="@+id/openChat"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/numberbgd"
            android:layout_alignTop="@+id/openChat"
            android:layout_alignEnd="@+id/openChat"
            android:layout_marginEnd="49dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_alignStart="@+id/numberbgd"
            android:id="@+id/msgnumber"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@+id/numberbgd"
            android:layout_height="25dp" />

    </RelativeLayout>

</LinearLayout>