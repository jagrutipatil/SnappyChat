<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:background="#22000000">

        <TextView
            android:id="@+id/nickNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/nickNameHeader"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickNameHeader"
            android:layout_toRightOf="@+id/person_photo"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/uploadedImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usertext"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/uploadedImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage1"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/uploadedImage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage2"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage3"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage4"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage5"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage6"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage7"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage8"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <ImageView
            android:id="@+id/uploadedImage10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadedImage9"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp" />

        <!--  <TextView
              android:id="@+id/person_age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/person_name"
              android:layout_toRightOf="@+id/person_photo" />
  -->
    </RelativeLayout>

</android.support.v7.widget.CardView>