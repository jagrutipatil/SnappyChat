<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sjsu.snappychat.UserProfileActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/interest"
        android:text="Intrest"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/aboutme"
        android:hint="Interest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nickName"
        android:text="Nick name"
        android:layout_alignEnd="@+id/profilePic"
        android:layout_below="@+id/profileText"
        android:layout_alignParentEnd="true"
        android:hint="Nick name"
        android:layout_alignStart="@+id/city"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/aboutme"
        android:text="About me"
        android:hint="About me"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/profilePic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_height="145dp"
        android:id="@+id/profilePic"
        android:layout_width="136dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_marginRight="20dp"
        android:text="Profile Pic"
        android:layout_below="@+id/profileText"
        android:src="@drawable/profileimg" />

    <TextView
        android:text="Profile Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="Advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interest"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        android:id="@+id/advanced"
        android:background="@android:color/darker_gray"
        style="@android:style/Widget.Material.Light.Button.Inset" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:id="@+id/done"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/advanced"
        android:layout_alignTop="@+id/advanced"
        style="@android:style/Widget.Material.Button"
        android:background="@android:color/holo_blue_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profession"
        android:layout_weight="1"
        android:hint="Profession"
        android:layout_below="@+id/nickName"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/nickName"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/city"
        android:hint="City"
        android:layout_weight="1"
        android:layout_below="@+id/profession"
        android:layout_toEndOf="@+id/profilePic" />


</RelativeLayout>
