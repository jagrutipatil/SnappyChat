<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sjsu.snappychat.UserProfileActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/view_aboutme"
        android:hint="About me"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/view_city"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view_city" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/view_profession"
        android:layout_weight="1"
        android:hint="Profession"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/view_city"
        android:hint="City"
        android:layout_weight="1"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/view_profession"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view_profession" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/view_nickname"
        android:hint="Nick name"
        android:layout_below="@+id/view_profilePic"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_height="145dp"
        android:id="@+id/view_profilePic"
        android:layout_width="136dp"
        android:layout_marginRight="20dp"
        android:text="Profile Pic"
        android:src="@drawable/profileimg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/view_interest"
        android:hint="Interest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
